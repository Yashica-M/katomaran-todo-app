# Server port (if 5000 is in use, change to another port like 5001 or 8080)
PORT=5000

# MongoDB connection URI (for local development or production Atlas URI)
MONGO_URI=mongodb://localhost:27017/todoapp

# Security keys (use strong random strings in production)
JWT_SECRET=your_jwt_secret_key_change_in_production
SESSION_SECRET=your_session_secret_key_change_in_production

# Client URL for CORS and OAuth redirect
CLIENT_URL=http://localhost:3000

# Google OAuth 2.0 credentials
# Get from Google Developer Console: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Node environment (development or production)
NODE_ENV=development

# Uncomment for production
# NODE_ENV=production
